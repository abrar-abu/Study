<Window x:Class="HelloWindowsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWindowsClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="10" >
        <TextBox x:Name="Input"/>
        <Button Content="Get Message" x:Name="Message" Click="Message_Click"/>
        <TextBlock x:Name="Output" FontSize="50" FontStyle="Italic" FontFamily="Arial" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
